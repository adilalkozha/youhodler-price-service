{
  "name": "bitcoin-price-service",
  "version": "1.0.0",
  "description": "Enterprise-grade Bitcoin price microservice with PostgreSQL persistence and Prometheus metrics",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "start:old": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/main.ts",
    "dev:old": "nodemon --exec ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "migration:run": "npx sequelize-cli db:migrate",
    "migration:undo": "npx sequelize-cli db:migrate:undo"
  },
  "keywords": [
    "bitcoin",
    "price",
    "microservice",
    "binance",
    "postgresql",
    "prometheus",
    "typescript"
  ],
  "author": "Senior Developer",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^11.1.5",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.5",
    "@nestjs/microservices": "^11.1.5",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/sequelize": "^11.0.0",
    "@nestjs/terminus": "^11.0.0",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.35.0",
    "sequelize-typescript": "^2.1.6",
    "ts-jest": "^29.4.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
